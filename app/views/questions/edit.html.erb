<div class="container">
  <%= form_for @question do |f| %>

      <div class="form-group">
        <%= f.label :title %><br />
        <%= f.text_field :title, :size=>"50", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :question %><br />
        <%= f.text_area :contentQuestion, :rows => 8, :cols => 50 %>
      </div>
      <br />

      <%= submit_tag "Edit your question", type: "submit", class: "btn btn-primary" %>

  <% end %>
</div>