<div class="container">
  <div class="tab-pane active" id="#profile">

    <h3 style="color: #730E15"><%= @user.login %></h3>
    <div class="row">
      <div class="col-md-2">Date of birth:</div>
      <div class="col-md-2"><%= l @user.date_of_birth %></div>
      <div class="col-md-8"></div>
    </div>
    <div class="row">
      <div class="col-md-2">Country:</div>
      <div class="col-md-2"><%= @user.country %></div>
      <div class="col-md-8"></div>
    </div>

    <div class="row">
      <div class="col-md-2">City:</div>
      <div class="col-md-2"><%= @user.city %></div>
      <div class="col-md-8"></div>
    </div>

    <div class="row">
      <div class="col-md-2">Address:</div>
      <div class="col-md-2"><%= @user.address %></div>
      <div class="col-md-8"></div>
    </div>
    <br/>

    <% if current_user != nil && current_user.id == @user.id %>
        <%= link_to "edit your profile", edit_user_registration_path %>

    <%end%>
  </div>
</div>